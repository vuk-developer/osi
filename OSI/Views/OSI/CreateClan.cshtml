@model OSI.Models.Clanovi
@{
  ViewData["Title"] = "Novi član";
}
<h1>Novi član</h1>

<h4>OBJEDINJENA SERVERSKA INFRASTRUKTURA</h4>
<button class="btn btn-danger" onclick="location.href = '/'">Nazad</button>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/napravi/clan" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">ID</label>
                <input name="Id" for="Id" value="@Guid.NewGuid().ToString()" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label">Ime</label>
                <input name="Ime" for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label">Prezime</label>
                <input name="Prezime" for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mesto" class="control-label">Mesto</label>
                <input name="Mesto" for="Mesto" class="form-control" />
                <span asp-validation-for="Mesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumRodjenja" class="control-label">Datum Rođenja</label>
                <input name="DatumRodjenja" for="DatumRodjenja" class="form-control hasDatepicker" id="Date"/>
                <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
            </div>
            <div type="hidden" class="form-group">
                <input name="Evidencija" type="hidden" for="Evidencija" class="form-control" />
                <span asp-validation-for="Evidencija" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Napravi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>