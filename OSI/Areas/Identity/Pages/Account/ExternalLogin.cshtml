@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Povežite svoj @Model.ProviderDisplayName nalog.</h2>
<hr />

<p id="external-login-description" class="text-info">
    Uspešno ste se autentifikovali sa <strong>@Model.ProviderDisplayName</strong>.
     Unesite adresu e-pošte za ovu lokaciju ispod i kliknite na dugme Registruj se da biste završili
     prijavljivanjem.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <label asp-for="Input.Email" class="form-label">E-adresa</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Registruj se</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
