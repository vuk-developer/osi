@{
    Knjige knjiga = ViewBag.KnjigaTransfer;
}

<h1>@knjiga.ImeKnjige</h1>

<h4>Objedinjena Serverska Infrastruktura</h4>
<div class="btn-group btn-group-toggle" data-toggle="buttons">
<button class="btn btn-danger" onclick="location.href = '/'">Nazad</button>
<a href="/osi/obrisi-knjigu/@knjiga.Id" class="btn btn-danger-main">Obriši</a>
</div>
<br />
<hr />
<div class="col-md-4 d-inline-flex">
    <form action="/uredik" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input class="form-control" type="hidden" name="Id" value="@knjiga.Id" for="Id" readonly />
        <div class="form-group">
            <label for="Isbn" class="control-label">ISBN</label>
            <input name="Isbn" for="Isbn" value="@knjiga.Isbn" class="form-control" />
            <span asp-validation-for="@knjiga.Isbn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ImeKnjige" class="control-label">Naslov</label>
            <input name="ImeKnjige" for="ImeKnjige" value="@knjiga.ImeKnjige" class="form-control" />
            <span asp-validation-for="@knjiga.ImeKnjige" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Autor" class="control-label">Autor</label>
            <input name="Autor" for="Autor" value="@knjiga.Autor" class="form-control" />
            <span asp-validation-for="@knjiga.Autor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Status" class="control-label">Status</label>
            <select name="Status" for="Status" value="@knjiga.Status" class="form-control" >
                <option value="Na stanju">Na stanju</option>
                <option value="Nije na stanju">Nije na stanju</option>
            </select>
            <span asp-validation-for="@knjiga.Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Signatura" class="control-label">Signatura</label>
            <input name="Signatura" for="Signatura" value="@knjiga.Signatura" class="form-control" />
            <span asp-validation-for="@knjiga.Signatura" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Sačuvaj" class="btn btn-primary" />
        </div>
    </form>
</div>
